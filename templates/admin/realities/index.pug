extends ../adminLayout.pug

block content 
    h1 Biens Immobiliers  
    hr
    
    if realities && realities.length > 0
        table.table.table-dark
            thead
                tr
                    th(scope='col') #
                    th(scope='col') Nom du vendeur
                    th(scope='col') Adresse
                    th(scope='col') Code Postal 
                    th(scope='col') Ville
                    th(scope='col') Prix
                    th(scope='col') Informations complémentaires
                    th(scope='col') Status de vente
                    th(scope='col') Status
                    th
            tbody
                each realitie in realities
                    tr
                        th(scope='row') 
                        td= realitie.firstname +' '+ realitie.lastname
                        td= realitie.address1 +' '+ realitie.address2
                        td= realitie.zipcode
                        td= realitie.town
                        td= realitie.price + ' €'
                        td= realitie.info_address
                        if realitie.sold == 0
                            td A vendre 
                        else 
                            td Vendu
                        if realitie.online == 0
                            td Hors ligne 
                        else 
                            td En ligne
                        td
                            button.btn.btn-danger.btn-sm.me-2(type='button')
                                a#i-trash(href='/admin/realities/delete/'+ realitie.id)
                                    i.bi.bi-trash3
                            button.btn.btn-primary.btn-sm(type='button')
                                a#i-pen(href="/admin/realities/edit/"+ realitie.id) 
                                    i.bi.bi-pencil-square
                    tr
    else 
        .alert.alert-info Aucun bien