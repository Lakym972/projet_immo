extends ../adminlayout.pug

block content

    h1 Liste des utilisateurs
    hr
    if users && users.length > 0
        table.table.table-dark
            thead
                tr
                    th(scope='col') #
                    th(scope='col') genre
                    th(scope='col') Nom
                    th(scope='col') Email
                    th(scope='col') Téléphone
                    th
            tbody
                each user in users
                    tr
                        th(scope='row')
                            .form-check.form-switch   
                                input.form-check-input(type='checkbox' role='switch')
                        if user.gender == 2
                            td madame 
                        else 
                            td monsieur
                        td= user.firstname +' '+ user.lastname
                        td= user.email
                        td= user.phone
                        td
                            button.btn.btn-danger.btn-sm.me-2(type='button')
                                a#i-trash(href='/admin/user/delete/'+ user.id)
                                    i.bi.bi-trash3
                            button.btn.btn-primary.btn-sm(type='button')
                                a#i-pen(href="/admin/user/edit/"+ user.id) 
                                    i.bi.bi-pencil-square
                    tr
    else 
        .alert.alert-info Aucun utilisateur
            
